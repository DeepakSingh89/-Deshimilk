<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductPage">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gray"
        android:id="@+id/relativelayout1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/logodairy"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/tv_delhidairy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DelhiDairy"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            />

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_margin="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout1"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUR PRODUCTS"
            android:textColor="@color/BlueViolet"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enjoy Your Health.Feel Cool, be Cool"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_below="@id/tv1"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout2"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/iv_cowmilk"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cowmilk"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:id="@+id/btn_cowmilk"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="click!! CowMilk"
            android:layout_below="@id/iv_cowmilk"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/iv_buffallo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bufallo"
            android:layout_alignParentRight="true"
            />
        <Button
            android:id="@+id/btn_buffallo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="click!! Buffallo"
            android:layout_below="@id/iv_buffallo"
            android:gravity="center"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/iv_chhach"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/chhach"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_cowmilk"
            />
        <Button
            android:id="@+id/btn_chhach"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="click!! Chhach"
            android:layout_below="@id/iv_chhach"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/iv_curd"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/curd"
            android:layout_below="@id/btn_buffallo"
            android:layout_alignParentRight="true"
            />
        <Button
            android:id="@+id/btn_curd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="click!! Curd"
            android:layout_below="@id/iv_curd"
            android:gravity="center"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/iv_ghee"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ghee"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_chhach"
            />
        <Button
            android:id="@+id/btn_ghee"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="click!! Ghee"
            android:layout_below="@id/iv_ghee"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/iv_paneer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/paneer"
            android:layout_below="@id/btn_curd"
            android:layout_alignParentRight="true"
            />
        <Button
            android:id="@+id/btn_paneer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="click!! Paneer"
            android:layout_below="@id/iv_paneer"
            android:gravity="center"
            android:layout_alignParentRight="true"
            />



    </RelativeLayout>



</RelativeLayout>
</ScrollView>