<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivityPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/Orange"

        >



     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="150sp"
         android:orientation="horizontal"
         android:background="@color/Blue"

         >
    <ImageView
        android:layout_width="140sp"
        android:layout_height="100sp"
        android:layout_margin="10sp"
        android:src="@drawable/logo"

        />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="DesiMilk"
             android:textSize="35sp"
             android:textStyle="italic"
             android:textColor="@color/White1"
             android:layout_margin="25sp"


             />
</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have you had your Dairy ! Today ?? "
        android:textSize="35sp"
        android:padding="7sp"
        android:gravity="center"
        android:layout_gravity="center"

        android:textColor="@color/Pink"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260sp"
        android:src="@drawable/milk3"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@color/ProductColor"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="25sp"
        android:background="@color/White"
        android:layout_marginRight="25sp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        android:background="@color/CommentColor"

        />

    </LinearLayout>


</ScrollView>

